<h1>All Pets</h1>

<h3><%= link_to 'Add a new pet', new_pet_path, class: 'btn btn-primary' %></h3>

<table class="table">
  <thead>
    <tr>
      <th>Category</td>
      <th>Color</td>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.category %></td>
        <td><%= pet.color %></td>
        <td><%= link_to 'Details', pet_path(pet) %></td>
      </tr>
    <% end %>
  </tbody>
</table>