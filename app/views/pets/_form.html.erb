<%= form_for(@pet) do |f| %>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ['Cat', 'Dog', 'Turtle', 'Fish', 'Monkey', 'Guinea Pig', 'Rabbit'], {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.select :color, ['White', 'Black', 'Brown', 'Purple', 'Blue', 'Gold', 'Other'], {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :found_at %>
    <%= f.text_field :found_at, class: 'form-control' %>
  </div>

  <%= f.submit 'Save Pet', class: 'btn btn-primary btn-block' %>

<% end %>
